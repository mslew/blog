---
import MainLayout from "./MainLayout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import dateFormat from "dateformat";
import me from '../../public/images/me-small.jpg'

const posts = await getCollection('posts');

let {
    content: {
        title,
        description,
        author,
        pubDate,
        image: {
            url,
            alt
        }
    }
} = Astro.props;
---
<MainLayout title={title}>
    <div class="flex flex-col gap-4">
        <div class="prose prose-light"><h1 transition:name={title}>{title}</h1></div>
        <div class="flex flex-row items-center self-center md:self-start border w-max p-4 mb-6 rounded-lg shadow-lg border-purple-900">
            <Image class="rounded-full mr-4 w-20 h-20" src={me} alt="me" transition:name="me"/>
            <div class="flex flex-col">
                <p transition:name={author}>{author}</p>
                <p>{dateFormat(pubDate, "UTC:mmmm dS, yyyy")}</p>
            </div>
        </div>
    </div>
    <div class="prose prose-light pb-24">
        <p transition:name={description}><em>{description}</em></p>
        <img class="rounded-md w-[600px]" src={url} alt={alt} transition:name={url}/>
        <slot/>
    </div>
</MainLayout>