---
import { ClientRouter } from 'astro:transitions';
import Nav from '../components/Nav.astro';
import Socials from '../components/Socials.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ClientRouter />
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg" href="favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="w-full h-full">
			<div class="flex flex-col justify-self-center justify-between w-1/2 h-screen">
				<div class="flex flex-row w-full">
					<Nav/>
				</div>
				<div class="flex flex-col pt-12 flex-grow"><slot/></div>
				<div class="flex flex-row w-full justify-center pt-12 pb-6">	
					<div class="flex flex-row"><Socials /></div>
				</div>
			</div>
		</div>
	</body>
</html>
<style is:global lang="postcss">
	html {
		@apply bg-slate-900 text-white;
	}
</style>
