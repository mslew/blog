---
import { ViewTransitions } from 'astro:transitions';
import Nav from '../components/Nav.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ViewTransitions />
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg" href="/public/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="w-full h-screen grid grid-cols-10 grid-rows-10">
			<div class="left-side row-span-10"></div>
			<div class="nav col-span-8 row-span-1 flex flex-row justify-center">
				<Nav/>
			</div>
			<div class="right-side row-span-10 "></div>
			<div class="col-span-8 row-span-10 p-8 justify-self-center mt-12">
				<slot/>
			</div>
		</div>
	</body>
</html>
<style is:global lang="postcss">
	html {
		@apply bg-slate-900 text-white;
	}
</style>
