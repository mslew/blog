---
import Nav from '../components/Nav.astro';
import BlogCol from '../components/BlogCol.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="layout-main grid h-screen w-screen grid-rows-6 grid-cols-6">
			<div class="border row-span-6 overflow-y-scroll">
				<BlogCol></BlogCol>
			</div>
			<div class="border col-span-5 h-2/5">
				<Nav></Nav>
			</div>
			<div class="border col-span-5 row-span-6 overflow-y-scroll">
				<slot />
			</div>
		</div> 
	</body>
</html>
<style is:global lang="postcss">
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}
</style>
