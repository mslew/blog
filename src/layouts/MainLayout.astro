---
import { ClientRouter } from 'astro:transitions';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ClientRouter />
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg" href="favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="flex flex-col justify-self-center justify-between w-full h-full">
			<Nav/>
			<main class="flex flex-col pt-12 flex-grow w-full place-self-center"><slot/></main>
			<Footer />
		</div>
	</body>
</html>
<style>
	html {
		@apply bg-slate-900 text-white;
	}
</style>
<script>
	function setupPadding() {
		const header = document.querySelector('header');
		const main = document.querySelector('main');
		if (main) {
			const headerHeight = header ? header.offsetHeight : 0;
			main.style.paddingTop = `${headerHeight + 48}px`;
		}
	}
	document.addEventListener('astro:page-load', setupPadding)
    document.addEventListener('astro:after-swap', setupPadding)
</script>
