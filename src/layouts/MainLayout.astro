---
import Nav from '../components/Nav.astro';
import BlogDisplay from '../components/BlogDisplay.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="w-screen h-screen grid grid-cols-10 grid-rows-10">
			<div class="left-side row-span-10">

			</div>
			<div class="nav border col-span-8 row-span-1">
			</div>
			<div class="right-side row-span-10 ">

			</div>
			<div class="picture col-span-8 row-span-6">
				<img class="w-full h-full" src="../../public/images/landing.jpeg">
			</div>
			<div class="flex col-span-8 row-span-3 justify-center">
				<BlogDisplay></BlogDisplay>
			</div>
		</div>
	</body>
</html>
<style is:global lang="postcss">
	html {
		@apply bg-slate-900;
	}
</style>
