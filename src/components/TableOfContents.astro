---
const { headings } = Astro.props;
interface heading {
    depth: number;
    slug: string;
    text: string;
}
---
<div class="flex flex-col gap-4 w-full border">
    <p>Table of Contents</p>
    {headings.map((heading: heading) => 
        <div class="flex flex-row items-center gap-2 w-full">
            <div class="w-full">
                <a href={`#${heading.text.toLowerCase().replaceAll(" ", "-")}`} class="text-slate-500 hover:text-white">{heading.text}</a>
            </div>
        </div>
    )}
</div>