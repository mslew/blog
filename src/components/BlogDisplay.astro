---
const allPosts = await Astro.glob('../pages/posts/*.md')
---

<div class="w-full h-full grid grid-cols-4 gap-x-20 pl-20 pr-20 gap-y-4 -m-32">
    {allPosts.map((post) => 
        <a class="text-white" href={post.url}>
            <div class="flex flex-col w-[90%] rounded-lg bg-slate-800 p-4 shadow-lg">
                <img src={post.frontmatter.image.url} width="300" alt={post.frontmatter.image.alt} />
                <p class="text-3xl">{post.frontmatter.title}</p>
                <p>{post.frontmatter.description}</p>
            </div>
        </a>
    )}
    {allPosts.map((post) => 
        <a class="text-white" href={post.url}>
            <div class="flex flex-col w-[90%] rounded-lg bg-slate-800 p-4 shadow-lg">
                <img src={post.frontmatter.image.url} width="300" alt={post.frontmatter.image.alt} />
                <p class="text-3xl">{post.frontmatter.title}</p>
                <p>{post.frontmatter.description}</p>
            </div>
        </a>
    )}
</div>

