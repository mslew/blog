---
import { Image } from "astro:assets";
import logonb from '../../public/images/logonb.png'
import Home from "./icons/Home.astro";
import Info from "./icons/Info.astro";
import TagIcon from "./icons/TagIcon.astro";
---
<header class="flex flex-row w-full place-self-center justify-center fixed z-50 bg-slate-900 opacity-75 shadow-2xl ">
    <nav class="text-white flex flex-row justify-between xl:w-1/2 max-md:w-[95%] max-xl:w-2/3 h-1/2 items-center pt-3 pb-3">
        <a href="/posts/1"><Image class="border rounded-full p-1 hover:bg-slate-500" src={logonb} alt="logo" width={60}/></a>
        <div class="flex flex-row gap-4 max-sm:gap-2 mr-4">
            <a href="/posts/1" class="group flex flex-row gap-2 items-center bg-slate-800 hover:bg-slate-500 pl-4 pr-4 pt-1 pb-1 rounded-full">
                <Home class="w-4 fill-slate-500 group-hover:fill-slate-300" />
                <p class="text-slate-300 group-hover:text-slate-100">Home</p>
            </a>
            <a href="/tags" class="group flex flex-row gap-3 items-center bg-slate-800 hover:bg-slate-500 pl-4 pr-4 pt-1 pb-1 rounded-full">
                <TagIcon class="w-4 fill-slate-500 group-hover:fill-slate-300" />
                <p class="text-slate-300 group-hover:text-slate-100">Tags</p>
            </a>
            <a href="/about"class="group flex flex-row gap-3 items-center bg-slate-800 hover:bg-slate-500 pl-4 pr-4 pt-1 pb-1 rounded-full">
                <Info class="w-4 fill-slate-500 group-hover:fill-slate-300" />
                <p class="text-slate-300 group-hover:text-slate-100">About</p>
            </a>
        </div>
    </nav>
</header>