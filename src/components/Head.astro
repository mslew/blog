---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import '../styles/katex.css';

interface Props{
    title: string,
    description: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const{ title, description } = Astro.props;
---
<head>
    <ClientRouter />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Max Lewis" />
    <meta name="keywords" content="blog, astro, software, movies, music, programming, technology" />
    <meta name="google" content="notranslate"/>
    <meta name="msapplication-TileColor" content="#121212" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Max Lewis's Blog" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/logonb.ico" />   

    <link rel="sitemap" href="/site.webmanifest" />
    <link rel="icon" type="image/svg" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="mask-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.ico" />


    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
</head>